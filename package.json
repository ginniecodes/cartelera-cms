{
  "name": "cartelera",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "url": "https://github.com/uptagprojects/cartelera"
  },
  "engines": {
    "node": ">=20.8.0",
    "npm": ">=10.1.0"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "next dev",
    "build": "next build && npm run configure-rabbitmq",
    "lint": "next lint",
    "start": "next start",
    "configure-rabbitmq": "dotenvx run -- ts-node ./src/scripts/configure-rabbitmq.ts",
    "consume-rabbitmq": "dotenvx run -- ts-node ./src/scripts/consume-rabbitmq.ts",
    "format": "prettier --write src/**/*.ts{,x}",
    "test": "npm run test:unit && npm run test:integration && npm run test:acceptance",
    "test:unit": "npm run test:jest tests/contexts/**/*/application",
    "test:integration": "npm run test:jest tests/contexts/**/*/infrastructure",
    "test:acceptance": "npm run build && npm run configure-rabbitmq && npm run test:features",
    "test:features": "NODE_ENV=test cucumber-js -c cucumber.config.js",
    "test:jest": "NODE_ENV=test jest"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.21.0",
    "@gsap/react": "^2.1.1",
    "@lottiefiles/dotlottie-react": "^0.9.3",
    "@openfga/sdk": "^0.7.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vercel/analytics": "^1.4.1",
    "@vercel/speed-insights": "^1.1.0",
    "amqplib": "^0.10.4",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.5.1",
    "diod": "^3.0.0",
    "dropbox": "^10.34.0",
    "gsap": "^3.12.5",
    "lucide-react": "^0.454.0",
    "migrate": "^2.1.0",
    "next": "^15.0.2",
    "next-auth": "^5.0.0-beta.25",
    "next-axiom": "^1.5.1",
    "node-mailjet": "^6.0.6",
    "nodemailer": "^6.9.16",
    "octagon-ui": "^1.0.10",
    "otp-generator": "^4.0.1",
    "pg": "^8.12.0",
    "pino": "^9.5.0",
    "qs": "^6.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.2.2",
    "remove-markdown": "^0.5.5",
    "resend": "^4.0.1",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@cucumber/cucumber": "^10.8.0",
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.48.2",
    "@types/amqplib": "^0.10.5",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@types/pg": "^8.11.6",
    "@types/qs": "^6.9.17",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-codely": "^3.1.3",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
