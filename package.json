{
  "name": "cartelera",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "url": "https://github.com/uptagprojects/cartelera"
  },
  "engines": {
    "node": ">=20.8.0",
    "npm": ">=10.1.0"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write src/**/*.ts{,x}",
    "test": "npm run test:unit && npm run test:integration && npm run test:acceptance",
    "test:unit": "npm run test:jest tests/contexts/**/*/application",
    "test:integration": "npm run test:jest tests/contexts/**/*/infrastructure",
    "test:acceptance": "npm run test:features",
    "test:features": "TS_NODE_PROJECT=tsconfig.steps.json NODE_ENV=test cucumber-js -c cucumber.config.js",
    "test:jest": "NODE_ENV=test jest"
  },
  "dependencies": {
    "@openfga/sdk": "^0.7.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "bcrypt": "^5.1.1",
    "hono": "^4.5.8",
    "jose": "^5.9.6",
    "migrate": "^2.1.0",
    "next": "14.2.10",
    "octagon-ui": "^0.0.3",
    "pg": "^8.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@cucumber/cucumber": "^10.8.0",
    "@faker-js/faker": "^8.4.1",
