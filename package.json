    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-codely": "^3.1.3",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "node-pg-migrate": "^7.5.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
